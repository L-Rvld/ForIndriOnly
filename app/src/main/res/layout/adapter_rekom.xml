<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rekomID"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomSumber"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomAir"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomProtein"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomLemak"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomKh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomSerat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomAbu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomKalsium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomFosfor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomBesi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomNatrium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomKalium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomTembaga"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomSeng"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomRetinol"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomBkar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomKarTot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomThiamin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomRiboflavin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomNiasin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rekomVitC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/layGoDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rekomNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rekomEnergi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/rekomPorsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rekomGanti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_ganti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>